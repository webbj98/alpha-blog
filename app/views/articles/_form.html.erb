<div class="container">
  

  <div class ="row justify-content-center">
    <div class = "col-10">
      <%= render 'shared/errors', obj: @article%>
      <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-white rounded", local: true) do |f|%>
        <div class="form-group row">
            <%= f.label :title, class: "col-2 col-form-label"%>
            <div class="col-10">
              <%= f.text_field :title, class: "form-control"%>
            </div>
        </div>

        <br>
        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label"%>
          <div class="col-10">
            <%= f.text_area :description, rows:10, class: "form-control"%>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "col-4 mt-3 btn btn-outline-info btn-lg"%>
        </div>
      <%end%>

      
    </div>
    <div class = "mb-3">
      <%= link_to '[ Cancel and return to Articles listing page ]', articles_path, class: "row justify-content-center"%>
    </div>
  </div>
  
</div>