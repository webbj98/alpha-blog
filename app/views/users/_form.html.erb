<div class="container">
  

  <div class ="row justify-content-center">
    <div class = "col-10">
      <%= render 'shared/errors', obj: @user%>
      <%= form_with(model: @user, class: "shadow p-3 mb-5 bg-white rounded", local: true) do |f|%>
        <div class="form-group row">
            <%= f.label :username, class: "col-2 col-form-label"%>
            <div class="col-10">
              <%= f.text_field :username, class: "form-control", placeholder: "Enter a username"%>
            </div>
        </div>

        <br>
        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label"%>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter your email"%>
          </div>
        </div>

        <br>
        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label"%>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control", placeholder: "Enter your password"%>
          </div>
        </div>

        
        <div class="form-group row justify-content-center">
          <%= f.submit(@user.new_record? ?  "Sign up" : "Update accout", class: "col-4 mt-3 btn btn-outline-info btn-lg")%>
        </div>
      <%end%>

      
    </div>
    <div class = "mb-3">
      <%= link_to '[ Cancel and return to Articles listing page ]', articles_path, class: "row justify-content-center"%>
    </div>
  </div>
  
</div>